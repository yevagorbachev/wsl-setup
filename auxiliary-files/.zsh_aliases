function maketex {
	cp ~/wsl-setup/auxiliary-files/maketex/* .
	mv texfile.tex $1'.tex'
	sed 's/{texfile}/'$1'\.tex/g' makefile -i
}

function theme {
	sed 's/ZSH_THEME=\"[a-z]*\"/ZSH_THEME=\"'$1'\"/g' ~/.zshrc -i
}
